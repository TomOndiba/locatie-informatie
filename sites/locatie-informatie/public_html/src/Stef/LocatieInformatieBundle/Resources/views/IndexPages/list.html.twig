{% extends "StefLocatieInformatieBundle::freelayout.html.twig" %}
{% set colsize = (items|length / 3)|round(0, 'ceil') %}
{% set actcolsize = 0 %}

{% block htmlbody %}
    <div id="ww">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 centered">
                    <h1>{{ page.title }}</h1>
                    {{ page.body }}
                </div>
            </div>
        </div>
    </div>

    <div class="container pt">
        <div class="row mt centered">

            <div class="col-lg-12">
                <ul class="list-unstyled list-inline">
                    <li><a href="{{ path(route, {'char' : 'apostrof'}) }}">{{ 'apostrof'|upper }}</a></li>
                    {% for letter in 'a'..'z' %}
                        <li><a href="{{ path(route, {'char' : letter}) }}" title="Locaties met letter {{ letter|upper }}">{{ letter|upper }}</a></li>
                    {% endfor %}
                </ul>
            </div>
        </div>

        {% if items|length > 0 %}
            <div class="row mt">
                <div class="col-lg-4">
                    <ul>
                        {% for item in items %}
                            <li>{{ item.title }}</li>
                            {% set actcolsize = actcolsize + 1 %}

                            {% if actcolsize == colsize %}
                                {% set actcolsize = 0 %}
                                </ul></div>
                                <div class="col-lg-4"><ul>
                            {% endif %}

                        {% endfor %}
                    </ul>
                </div>
            </div>
        {% else %}
            <div class="row mt centered">
                <div class="col-lg-12">
                    <p>Er zijn <strong>geen locaties</strong> gevonden die beginnen met de <strong>letter {{ char }}</strong>. Kies een andere letter uit de lijst hierboven voor meer resultaten.</p>
                </div>
            </div>
        {% endif %}
    </div>

{% endblock %}