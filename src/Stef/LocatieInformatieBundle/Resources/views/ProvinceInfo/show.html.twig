{% extends "StefLocatieInformatieBundle::freelayout.html.twig" %}

{% block htmlbody %}
    <div id="ww">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 centered">
                    <h1>{{ page.title }}</h1>
                </div>
            </div>
        </div>
    </div>

    <div class="container pt">
        <div class="row mt">
            <div class="col-lg-12">
                {% if province is null %}
                    {% include 'StefLocatieInformatieBundle:ProvinceInfo:index.html.twig' %}
                {% else %}
                    {% include 'StefLocatieInformatieBundle:ProvinceInfo:' ~ province.slug ~ '.html.twig' ignore missing %}
                    {% include 'StefLocatieInformatieBundle:ProvinceInfo:location-info.html.twig' %}
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}